
<%= form_for(@sale) do |f| %>
  <h2>Escoja un cliente para empezar con la venta</h2>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> no permite(n) registrar la venta:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <strong>Cliente:</strong><br>
  <div class="row">
    <div class="col-md-4 field"><%= f.select :client_id, options_from_collection_for_select(@clientes, 'id', 'nombre'), {},{class: 'form-control'} %></div>
    <div class="col-md-4 actions"><%= f.submit 'Continuar', class: 'btn btn-info' %></div>
  </div>
  <br><br>

<% end %>
