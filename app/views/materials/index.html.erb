<p id="notice"><%= notice %></p>

<h1 class="text-center" style="font-family: verdana; font-size: 20px;">Lista de materiales</h1></br></br>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Color</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.nombre %></td>
        <td><%= material.tipo %></td>
        <td><%= material.color %></td>
        <td><%= material.cantidad %></td>
        <td><%= link_to 'Ver', material,  class: 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_material_path(material), class: 'btn btn-success' %></td>
        <td><%= link_to 'Eliminar', material, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Material', new_material_path, class: 'btn btn-default' %>
<%= link_to 'Inicio', root_path, class: 'btn btn-info' %>