<p id="notice"><%= notice %></p>

<h1 class="text-center" style="font-family: verdana; font-size: 20px;">Lista de clientes</h1></br></br>

<table class="table">
  <thead>
    <tr>
      <th>Nit</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.nit %></td>
        <td><%= client.nombre %></td>
        <td><%= link_to 'Ver', client, class: 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_client_path(client),  class: 'btn btn-success' %></td>
        <td><%= link_to 'Eliminar', client, class: 'btn btn-danger', method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nuevo Cliente', new_client_path, class: 'btn btn-default' %>
<%= link_to 'Inicio', root_path, class:   'btn btn-info' %>
