<p id="notice"><%= notice %></p>

<h1 class="text-center" style="font-family: verdana; font-size: 20px;">Reporte de diseños</h1></br></br>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Diseño</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designs.each do |design| %>
      <tr>
        <td><%= design.nombre %></td>
        <td><%= design.descripcion %></td>
        <td><%= image_tag design.image.url(:thumb) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
