<p id="notice"><%= notice %></p>

<h1 class="text-center" style="font-family: verdana; font-size: 20px;">Reporte de productos</h1></br></br>

<table class="table">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Costo</th>
      <th>Tipo</th>
      <th>Cantidad</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.codigo %></td>
        <td><%= product.nombre %></td>
        <td><%= product.costo %></td>
        <td><%= product.tipo %></td>
        <td><%= product.cantidad %></td>
      </tr>
    <% end %>
  </tbody>
</table>